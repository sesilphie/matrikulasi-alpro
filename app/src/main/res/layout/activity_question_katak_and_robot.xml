<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionKatakAndRobotActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textJudulSoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Judul Soal"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonHint"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#EC7342"
                android:fontFamily="@font/poppins_bold"
                android:text="?"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4DFFEFBE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textSoal1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins"
                android:text="Soal Lorem Ipsum"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageGambar1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSoal1"
                app:srcCompat="@drawable/standart_pesanlampu" />

            <TextView
                android:id="@+id/textSoal2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textSoal1"
                app:layout_constraintTop_toBottomOf="@+id/imageGambar1" />

            <ImageView
                android:id="@+id/imageGambar2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal2"
                app:layout_constraintStart_toStartOf="@+id/textSoal2"
                app:layout_constraintTop_toBottomOf="@+id/textSoal2"
                app:srcCompat="@drawable/standart_pesanlampupart1" />

            <TextView
                android:id="@+id/textSoal3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal2"
                app:layout_constraintStart_toStartOf="@+id/textSoal2"
                app:layout_constraintTop_toBottomOf="@+id/imageGambar2" />

            <ImageView
                android:id="@+id/imageGambar3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal2"
                app:layout_constraintStart_toStartOf="@+id/textSoal2"
                app:layout_constraintTop_toBottomOf="@+id/textSoal3"
                app:srcCompat="@drawable/standart_pesanlampupart1" />

            <TextView
                android:id="@+id/textSoal4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal2"
                app:layout_constraintStart_toStartOf="@+id/textSoal2"
                app:layout_constraintTop_toBottomOf="@+id/imageGambar3" />

            <Button
                android:id="@+id/buttonA"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#7997C9"
                android:fontFamily="@font/poppins_medium"
                android:text="Pilihan A"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/textSoal4"
                app:layout_constraintTop_toBottomOf="@+id/textSoal4" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#7997C9"
                android:fontFamily="@font/poppins_medium"
                android:text="Pilihan B"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/textSoal4"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textSoal4" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:backgroundTint="#7997C9"
                android:fontFamily="@font/poppins_medium"
                android:text="Pilihan C"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/buttonA"
                app:layout_constraintStart_toStartOf="@+id/buttonA"
                app:layout_constraintTop_toBottomOf="@+id/buttonA" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:backgroundTint="#7997C9"
                android:fontFamily="@font/poppins_medium"
                android:text="Pilihan D"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/buttonB"
                app:layout_constraintStart_toStartOf="@+id/buttonB"
                app:layout_constraintTop_toBottomOf="@+id/buttonB" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <Button
                android:id="@+id/buttonCekHasil"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Cek Hasil"
                android:textSize="16sp"
                app:cornerRadius="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textSoal4"
                app:layout_constraintStart_toStartOf="@+id/textSoal4"
                app:layout_constraintTop_toBottomOf="@+id/buttonC" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>